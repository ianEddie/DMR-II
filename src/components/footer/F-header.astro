---
import Phone from "../icons/Phone.astro";
---

<article class='flex flex-col justify-around items-center sm:py-0 py-3 sm:gap-y-0 gap-y-2'>
  <h1
    class='w-full text-center text-xl font-semibold tracking-widest text-white'
  >
    DMR
  </h1>

  <div class='flex flex-col items-center w-full gap-y-3'>
    <h2 class='text-neutral-300'>Haganos su consulta</h2>
    <button
      class='flex bg-red-600 sm:w-[35%] w-1/2 py-2 pr-2 pl-10 rounded-full items-center justify-between'
    >
      <span class="font-semibold text-white tracking-widest uppercase">Llamar</span>
      <Phone />
    </button>
  </div>
</article>
