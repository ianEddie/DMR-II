---
import CardButton from './CardButton.astro';
const { title, description, img } = Astro.props;
---

<article
  class='grid grid-cols-2 w-full rounded-2xl bg-neutral-100 shadow-lg shadow-black/10 font-primary'
>
  <div
    class='flex flex-col justify-around items-center text-center gap-y-4 p-2 text-stone-900'
  >
    <h2 class='font-semibold text-xl'>{title}</h2>
    <p class='tracking-wide text-sm'>{description}</p>
    <CardButton />
  </div>
  <div>
    <img
      src={img}
      alt='image'
      class='w-full h-full object-cover rounded-r-2xl'
    />
  </div>
</article>
