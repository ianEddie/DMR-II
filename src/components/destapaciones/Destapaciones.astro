---
import Contact from './Contact.astro';
import Info from './Info.astro';
import Titles from './Titles.astro';
---

<section class='w-full h-screen flex sm:grid sm:grid-cols-2 font-primary'>
  <article
    class='sm:flex hidden flex-col items-center justify-center gap-y-10 px-10'
  >
    <img
      src='https://i.postimg.cc/nrGqjpvR/destapaciones.webp'
      alt='image'
      class='rounded-xl shadow-lg shadow-black/30'
    />
  </article>
  <article
    class='h-full text-center flex flex-col justify-around items-center sm:py-14 py-10'
  >
    <Titles />
    <Info />
    <Contact />
  </article>
</section>
