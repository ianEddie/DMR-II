---
import data from "../../data/servicesData.json";
import Card from "./Card.astro";
import Header from "./S-Header.astro";
import Footer from "./S-Footer.astro";
---

<section>
  <Header />
  <div class='flex flex-col items-center gap-5 p-5 sm:w-2/3'>
    {data.map((item) => <Card {...item} />)}
  </div>
  <Footer />
</section>
<style>
  section {
    @apply min-h-screen w-full flex flex-col justify-between items-center pt-14 pb-5;
  }

</style>
