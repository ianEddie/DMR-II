---
import FixedFooter from '../components/footer/FixedFooter.astro';
import Header from '../components/header/Header.astro';
import { ViewTransitions, fade } from 'astro:transitions';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body transition:animate={fade({ duration: '0.7s' })}>
    <Header />
    <main>
      <slot />
    </main>
    <FixedFooter />
    <style is:global>
      @import url('https://fonts.googleapis.com/css2?family=Bungee&family=Raleway:wght@100;200;300;400&display=swap');
      @layer {
        body {
          @apply scrollbar scrollbar-w-[5px]  scrollbar-track-neutral-900 scrollbar-thumb-neutral-100;
        }
      }
      main {
        @apply bg-gradient-to-b from-neutral-200/70 to-neutral-100;
      }
    </style>
  </body>
</html>
