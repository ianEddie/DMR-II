---
import Arrow from "../icons/Arrow.astro";
const { title, description, img } = Astro.props;
---

<article
  class='grid grid-cols-2 w-full rounded-xl bg-stone-300/30 shadow-lg shadow-black/10 font-primary'
>
  <div
    class='flex flex-col justify-around items-center text-center px-3 sm:py-0 py-3 rounded-l-xl sm:gap-y-0 gap-y-3'
  >
    <h2 class='font-semibold text-xl text-neutral-900'>{title}</h2>
    <p class='text-neutral-600 font-semibold'>{description}</p>
    <button
      class='bg-red-600 text-neutral-100 tracking-widest flex justify-between items-center sm:w-1/3 w-2/3 pr-1 py-1 pl-5 rounded-full font-semibold'
    >
      <span>Info</span>
      <Arrow />
    </button>
  </div>
  <div>
    <img src={img} alt='image' class='w-full h-full object-cover' />
  </div>
</article>
